@model IEnumerable<Blog.Web.Models.Domain.Tag>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Tag - Admin Funcionality</h1>
    </div>
</div>


<div class="container" py-5>
    @if (Model != null && Model.Any())
    {
        <table class="table">

            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>DisplayName</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <form method="post">
                    <tr>
                        <td>@item.Id </td>
                        <td>@item.Name  </td>
                        <td>@item.DisplayName  </td>
                        <td>
                            
                                <a asp-controller="AdminTags" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                           
                            <button class="btn btn-warning" type="submit"
                                asp-area=""
                                asp-route-id="@item.Id"
                                asp-controller="AdminTags"
                                asp-action="Delete">
                                Delete
                            </button>
                        </td>
                    </tr>
                    </form>
                }
            </tbody>
        </table>
    }
    else
    {
        <a>No Tags Found! </a>
    }
</div>
